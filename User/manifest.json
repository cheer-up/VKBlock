{
   "background": {
      "persistent": true,
      "scripts": [ "background.js", "firebase.js" ]
   },
   "browser_action": {
      "default_popup": "button/popup.html",
      "default_title": "VK Block"
   },
   "content_scripts": [ {
      "js": [ "firebase.js" ],
      "matches": [ "*://vk.com/*" ]
   } ],
   "description": "расширение для блокировки постов ВК, являющихся рекламой",
   "icons": {
      "128": "img/icon.png"
   },
   "manifest_version": 2,
   "name": "VK Block",
   "permissions": [ "*://vk.com/*", "storage", "tabs" ],
   "short_name": "VK Block",
   "version": "0.70"
}
